{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
<div class="container mx-auto px-4 mt-8">
    <h1 class="text-2xl font-bold text-center mb-6">User Index</h1>

    <div class="overflow-x-auto">
        <table class="table-auto w-full border border-gray-300 shadow-md rounded-lg">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Username</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Password</th>
                    <th class="px-4 py-2">Roles</th>
                    <th class="px-4 py-2">Reset Password Token</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white">
            {% for user in users %}
                <tr class="border-b hover:bg-gray-100">
                    <td class="px-4 py-2 text-center">{{ user.id }}</td>
                    <td class="px-4 py-2">{{ user.username }}</td>
                    <td class="px-4 py-2">{{ user.email }}</td>
                    <td class="px-4 py-2 truncate">{{ user.password }}</td>
                    <td class="px-4 py-2">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="px-4 py-2 truncate">{{ user.resetPasswordToken }}</td>
                    <td class="px-4 py-2 text-center">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" 
                           class="text-blue-500 hover:text-blue-700 underline">Show</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                           class="ml-4 text-green-500 hover:text-green-700 underline">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="px-4 py-2 text-center text-gray-500">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex justify-end">
        <a href="{{ path('app_user_new') }}" 
           class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Create New
        </a>
    </div>
</div>
{% endblock %}
