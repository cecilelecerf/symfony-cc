{% extends 'base.html.twig' %}

{% block title %}Tag Details{% endblock %}

{% block body %}
<div class="container mx-auto px-4 mt-8">
    <h1 class="text-2xl font-bold text-center mb-6">Tag Details</h1>

    <div class="overflow-hidden bg-white shadow rounded-lg border border-gray-200">
        <table class="w-full table-auto">
            <tbody class="divide-y divide-gray-200">
                <tr>
                    <th class="px-6 py-4 bg-gray-100 text-gray-600 text-left">ID</th>
                    <td class="px-6 py-4">{{ tag.id }}</td>
                </tr>
                <tr>
                    <th class="px-6 py-4 bg-gray-100 text-gray-600 text-left">Label</th>
                    <td class="px-6 py-4">{{ tag.label }}</td>
                </tr>
                <tr>
                    <th class="px-6 py-4 bg-gray-100 text-gray-600 text-left">Publications</th>
                    <td class="px-6 py-4">
                        {% if tag.publications is not empty %}
                            <ul>
                                {% for publication in tag.publications %}
                                    <li>{{ publication.id }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            No publications linked
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex space-x-4 justify-end">
        <a href="{{ path('app_tag_index') }}" 
           class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
            Back to List
        </a>
        <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" 
           class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Edit
        </a>
        {{ include('admin/tag/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
