{% extends "base.html.twig" %}
{% block title %}Streemi
{% endblock %}
{% block body %}
<div>

       {% if error %}
            <div class="text-center bg-red-100 text-red-600 p-3 rounded-lg mb-4">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
    <form method="post" class="w-3/4 mx-auto" action={{ path('app_login') }}>
        <div class="">
            <input class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white" id="username" type="text" name="_email" placeholder="Adresse Email" autocomplete="email" required value="{{ lastUsername }}"/>
        </div>
        <div class=" mt-3">
            <input class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white" id="password" type="password" name="_password" placeholder="Mot de passe" autocomplete="current-password" required/>
 
        </div>
        <div class="flex items-center justify-center mt-8">
            <button type="submit" class=" flex w-full bg-orange-600 flex-row p-3 items-center justify-center rounded-lg overflow-hidden border cursor-pointer transition text-white hover:opacity-90 hover:scale-105">
                Se connecter
            </button>
        </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    </form>
    			<div class="flex items-center justify-center mt-2">
										<a href={{path("forgot") }} class="text-red-600 cursor-pointer transition hover:text-red-700 hover:scale-105">
											Vous avez oubliez votre mot de passe ?
										</a>
									</div>
    		<div class="flex items-center justify-center mt-16">
										<a href={{path("app_register") }} class="text-orange-600 cursor-pointer transition hover:text-orange-700 hover:scale-105">

											Pas de compte ? Inscrivez-vous
										</a>
									</div>
 </div>
{% endblock %}